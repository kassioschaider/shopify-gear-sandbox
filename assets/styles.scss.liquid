//Variebles
//--------------------------------------------------------------------------------------------

//Colors
$color-pacific: #163F50;
$color-sunset: #E26633;
$color-poppy: #F29D41;
$color-goldenrod: #F6C142;
$color-success: #2ED58F;
$color-turbo: #D5462E;
$color-sky: #D3DEEC;
$color-sand: #FCEDC9;
$color-cloud: #FFFFFF;

//Elements
$color-border: #DFDFDF;

// Backgrounds
$color-body: {{ settings.color_body_bg }};
$color-header-bg: #fff;

// Header
$header-mobile-height: 72px;

//Fonts
//--------------------------------------------------------------------------------------------
@font-face {
    font-family: 'Recoleta';
    src: url('Recoleta-Bold.eot');
    src: url('Recoleta-Bold.eot?#iefix') format('embedded-opentype'),
        url('Recoleta-Bold.woff2') format('woff2'),
        url('Recoleta-Bold.woff') format('woff'),
        url('Recoleta-Bold.ttf') format('truetype'),
        url('Recoleta-Bold.svg#Recoleta-Bold') format('svg');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Odudo Mono';
    src: url('OdudoMono-Bold.eot');
    src: url('OdudoMono-Bold.eot?#iefix') format('embedded-opentype'),
        url('OdudoMono-Bold.woff2') format('woff2'),
        url('OdudoMono-Bold.woff') format('woff'),
        url('OdudoMono-Bold.ttf') format('truetype'),
        url('OdudoMono-Bold.svg#OdudoMono-Bold') format('svg');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
}

//Body
//--------------------------------------------------------------------------------------------
body {
    font-family: 'Odudo';
    font-style: normal;
    font-weight: normal;
    font-size: 12px;
    line-height: 18px;
    color: $color-pacific;
}

.main-content {
    padding-top: 72px;
}

//Headings
//--------------------------------------------------------------------------------------------
h1, h2, h3, h4, h5, h6 {
    font-family: 'Recoleta';
    font-style: normal;
    font-weight: bold;
    color: $color-pacific;
}

h1 {
    font-size: 44px;
    line-height: 50px;
}

h2 {
    font-size: 36px;
    line-height: 40px;
}

h3, h4, h5, h6 {
    font-size: 22px;
    line-height: 26px;
}

.text-uppercase {
    font-weight: 600;
    text-transform: uppercase;
}

//Typograph
//--------------------------------------------------------------------------------------------
p {
    font-size: 14px;
    line-height: 20px;
}

.preamble {
    font-size: 16px;
    line-height: 24px;
}

// Icons
// -----------------------------------------------------------    
.icon {
    width: auto;
    height: 22px;
}

//Header
//--------------------------------------------------------------------------------------------
.site-header {
    height: $header-mobile-height;
    position: fixed;
    width: 100%;
    z-index: 999;
}

.site-header__icon {
    padding: 0;
    width: 22px;
    height: 22px;

    &.site-header__menu {
        margin-left: 15px;
    }

    &.site-header__cart {
        margin-right: 20px;
    }

    &.site-header__account {
        margin-right: 28px;
    }

    &.site-header__search-toggle {
        margin-right: 28px;
    }
}

.site-header__mobile-nav {
    height: $header-mobile-height;
}

.site-header__icons-wrapper {
    display: block;
}

.site-header__logo-image {
    padding: 16px 64px 16px 28px;
}

.header-bars {

    .header-bar-padding {
        padding: 1px 0px 0px 0px;
    }

    .header-bar {
        width: 375px;
        height: 8px;
    }
}

.hidden {
    display: none;
}