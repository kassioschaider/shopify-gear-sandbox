//Variebles
//--------------------------------------------------------------------------------------------

//Colors
$color-pacific: #163F50;
$color-sunset: #E26633;
$color-poppy: #F29D41;
$color-goldenrod: #F6C142;
$color-success: #2ED58F;
$color-turbo: #D5462E;
$color-sky: #D3DEEC;
$color-sand: #FCEDC9;
$color-cloud: #FFFFFF;

//Elements
$color-border: #DFDFDF;

// Backgrounds
$color-body: {{ settings.color_body_bg }};
$color-header-bg: #fff;

// Header
$header-mobile-height: 72px;

//Fonts
//--------------------------------------------------------------------------------------------
@font-face {
    font-family: 'Recoleta';
    src: url('Recoleta-Regular.eot');
    src: local('Recoleta Regular'), local('Recoleta-Regular'),
        url('Recoleta-Regular.eot?#iefix') format('embedded-opentype'),
        url('Recoleta-Regular.woff') format('woff'),
        url('Recoleta-Regular.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'Recoleta';
    src: url('Recoleta-Bold.eot');
    src: url('Recoleta-Bold.eot?#iefix') format('embedded-opentype'),
        url('Recoleta-Bold.woff2') format('woff2'),
        url('Recoleta-Bold.woff') format('woff'),
        url('Recoleta-Bold.ttf') format('truetype'),
        url('Recoleta-Bold.svg#Recoleta-Bold') format('svg');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Odudo Mono';
    src: url('OdudoMono-Regular.eot');
    src: url('OdudoMono-Regular.eot?#iefix') format('embedded-opentype'),
        url('OdudoMono-Regular.woff2') format('woff2'),
        url('OdudoMono-Regular.woff') format('woff'),
        url('OdudoMono-Regular.ttf') format('truetype'),
        url('OdudoMono-Regular.svg#OdudoMono-Regular') format('svg');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Odudo Mono';
    src: url('OdudoMono-Bold.eot');
    src: url('OdudoMono-Bold.eot?#iefix') format('embedded-opentype'),
        url('OdudoMono-Bold.woff2') format('woff2'),
        url('OdudoMono-Bold.woff') format('woff'),
        url('OdudoMono-Bold.ttf') format('truetype'),
        url('OdudoMono-Bold.svg#OdudoMono-Bold') format('svg');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
}

//Body
//--------------------------------------------------------------------------------------------
body {
    font-family: 'Odudo Mono';
    font-style: normal;
    font-weight: normal;
    font-size: 12px;
    line-height: 18px;
    color: $color-pacific;
}

.main-content {
    padding-top: 72px;
}

//Headings
//--------------------------------------------------------------------------------------------
h1, h2, h3, h4, h5, h6 {
    font-family: 'Recoleta';
    font-style: normal;
    font-weight: bold;
    color: $color-pacific;
}

h1 {
    font-size: 44px;
    line-height: 50px;
}

h2 {
    font-size: 36px;
    line-height: 40px;
    margin: 0;
    padding: 3px 0px;
}

h3, h4, h5, h6 {
    font-size: 22px;
    line-height: 26px;
}

.footer-list-uppercase {
    font-weight: bold;
    font-size: 16px;
    line-height: 19px;
    text-transform: uppercase;
}

.footer-style-contact {
    font-weight: bold;
    font-size: 16px;
    line-height: 30px;
}

.footer-style-opening {
    font-size: 14px;
    line-height: 17px;
}

.collection-list-uppercase {
    font-weight: 600;
    font-size: 14px;
    line-height: 20px;
    text-transform: uppercase;
    color: $color-sunset;
}

.collection-list-uppercase-item {
    font-size: 14px;
    line-height: 17px;
    font-weight: 600;
    text-transform: uppercase;
    color: $color-pacific;
}

//Typograph
//--------------------------------------------------------------------------------------------
p {
    font-size: 14px;
    line-height: 20px;
    margin: 0;
}

.preamble {
    font-size: 16px;
    line-height: 24px;
}

//Icons
//--------------------------------------------------------------------------------------------
.icon {
    width: auto;
    height: 22px;
}

//Header
//--------------------------------------------------------------------------------------------
.site-header {
    height: $header-mobile-height;
    position: fixed;
    width: 100%;
    z-index: 999;
}

.site-header__icon {
    padding: 0;
    width: 22px;
    height: 22px;

    &.site-header__menu {
        margin-left: 15px;
    }

    &.site-header__cart {
        margin-right: 20px;
    }

    &.site-header__account {
        margin-right: 28px;
    }

    &.site-header__search-toggle {
        margin-right: 28px;
    }
}

.site-header__mobile-nav {
    height: $header-mobile-height;
}

.site-header__icons-wrapper {
    display: block;
}

.site-header__logo-image {
    padding: 16px 64px 16px 28px;
}

.header-bars {

    .header-bar-padding {
        padding: 1px 0px 0px 0px;
    }

    .header-bar {
        width: 375px;
        height: 8px;
    }
}

.hidden-bars {
    display: none;
}

.header-onroll {
    background: white !important;
    height: 56px;

    .site-header__mobile-nav {
        background: white !important;
        height: 56px;
    }
}

//Footer
//--------------------------------------------------------------------------------------------
.site-footer {
    height: auto;

    .page-width {
        padding-right: 16px;
        padding-left: 16px;
    }
}

.site-footer__content {
    padding-top: 44px;
}

.site-footer__icon-list {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: stretch;
    align-content: stretch;
    padding-right: 4px;
}

.site-footer__item-inner--link_list {

    width: 325px;

    ul {
        margin: 0;

        &.active {
            display: block; 
        }
    }

    li {
        margin: 0;
        padding-bottom: 34px;
    }

    a {
        display: block;
        width: 100%;
    }

    .level-2 {
        font-size: 16px;
        line-height: 40px;
        padding-left: 25px;
        display: none;

        li {
            padding: 8px 0 0;

            &:last-child {
                padding-bottom: 0;
            }
        }
    }

    .level-3 {
        padding-left: 25px;
        display: none;
    }
}

.plus-link {
    display: flex;
}

.social-icons {

    .icon {
        width: 31px;
        height: 31px;
    }
}

.footer-grid-adjust {
    display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
    align-items: stretch;
    padding-bottom: 16px;
}

.footer-width-adjust-support {
    width: 55%;
}

.footer-width-adjust-follow {
    width: 45%;
}

.footer-padding-title-follow {
    padding-bottom: 21px;
}

.footer-padding-title-support {
    padding-bottom: 11px;
}

.site-footer-item-tall {
    text-align: left;
}

//Collections
//--------------------------------------------------------------------------------------------
.collection-grid-adjust {
    padding-top: 43px;
}

.collection-list-adjust {
    display: inline-flex;
}

.collection-list-item-adjust {
    padding: 0px 15px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.collection-line-list {
    width: 112px;
    height: 3px;
    background: transparent; //$color-sunset onclick
}

